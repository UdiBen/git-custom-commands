#!/bin/sh

# Use BASE_BRANCH environment variable, default to main
BASE_BRANCH=${BASE_BRANCH:-main}

# Fetch the latest changes from origin
git fetch

# Attempt to merge origin/$BASE_BRANCH into the current branch
git merge origin/$BASE_BRANCH
merge_exit_code=$?

if [ $merge_exit_code -ne 0 ]; then
    # A non-zero exit code likely means merge conflicts occurred
    echo "Please resolve the conflicts, commit, and push when ready."
else
    # No conflicts, safe to push
    git push
fi
